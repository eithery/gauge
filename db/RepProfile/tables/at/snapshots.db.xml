<?xml version="1.0"?>
<!--
  [at].[snapshots]
  Contains audit trail snapshots.
-->
<table name="snapshots" schema="at">
  <columns>
    <col name="operation" length="256" required="true"/>
    <col name="object_id" type="long" required="true"/>
    <col name="object_type" length="128" required="true"/>
    <col name="object_code" length="256" required="true"/>
    <col name="modified" type="datetime" required="true" default="getdate()"/>
    <col name="modified_by" length="256" required="true"/>
    <col name="client_host" length="256" required="true" default="host_name()"/>
    <col name="snapshot" type="xml" required="true"/>
    <col name="hash" type="binary" length="16" required="true"/>
  </columns>
</table>
