<?xml version="1.0"?>
<!--
  [dbo].[employees]
  Contains personal information about reps.
-->
<table name="employees">
  <columns>
    <col id="true"/>
    <col name="firstName" length="256"/>
    <col name="middleName" length="256"/>
    <col name="lastName" length="256" required="true"/>
    <col name="nickName" length="256"/>
    <col name="designation" length="256"/>
    <col name="displayName" length="256"/>
    <col name="ssn" length="16"/>
    <col name="employeeCode" length="16"/>
    <col name="gender" type="char" check="[FM]"/>
    <col name="dateOfBirth" type="datetime"/>
    <col name="businessAddressId" ref="addresses"/>
    <col name="residenceAddressId" ref="addresses"/>
    <col name="residenceAddress2Id" ref="addresses"/>
    <col name="preferredMailingAddress" type="enum" required="true" check="0..3"/>
    <col name="contactsId" ref="contacts"/>
    <col name="description"/>
    <col name="photo" type="blob"/>
  </columns>
</table>
