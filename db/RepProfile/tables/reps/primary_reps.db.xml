<?xml version="1.0"?>
<!--
  [dbo].[primaryReps]
  Contains primary reps.
-->
<table name="primaryReps">
  <columns>
    <col name="rr2CodeId" ref="rr2Codes"/>
    <col name="employeeId" ref="employees" required="true"/>
    <col name="repContractTypeId" ref="repContractTypes" required="true"/>
    <col name="teamId" ref="teams"/>
    <col name="alternatePayeeId" ref="primaryReps"/>
    <col name="paymentTypeId" ref="paymentTypes"/>
    <col name="crdNumber" length="10"/>
    <col name="carryDeficit" type="bool" required="true"/>
    <col name="balanceForward" type="bool" required="true"/>
    <col name="affiliationDate" type="datetime" required="true"/>
    <col name="status" type="byte" function="get_rep_status" params="[:id, getdate()]"/>
  </columns>
</table>
