<?xml version="1.0"?>
<!--
	[ref].[investment_experience]
	Defines metadata for customer investment experience fields.
-->
<table name="investment_experience" schema="ref">
	<columns>
		<col id="true"/>
		<col name="name" length="256" required="true" unique="true"/>
		<col name="display_name" length="256" required="true"/>
		<col name="description"/>
		<col name="ordinal" type="int" required="true" check=">0" unique="true"/>
		<col name="is_enabled" required="true" default="true"/>
		<col name="has_comment" required="true"/>
		<col name="has_experience_levels" required="true" default="true"/>
		<col name="has_years_levels" required="true" default="true"/>
		<col name="has_years_amount" required="true"/>
		<col name="has_transaction_levels" required="true" default="true"/>
	</columns>
</table>
