<?xml version="1.0"?>
<!--
	[dbo].[br_natural_owner]
	Contains customer info (individuals and corporations).
-->
<table name="br_natural_owner">
	<columns>
		<col name="natural_owner_id" id="true"/>
		<col name="natural_owner_type_id" ref="br_natural_owner_type" required="true"/>
		<col name="alpha_code" length="25"/>
		<col name="display_name" sql="case when [natural_owner_type_id] = 1 then [dba] else ([last_name] + ' ' + [first_name]) end"
			persisted="true" index="true"/>
		<col name="tax_id" length="16" business_id="true"/>
		<col name="tax_id_type" type="enum" business_id="true" check="0..5"/>
		<col name="date_of_birth" type="date"/>
		<col name="legal_address_id" ref="br_address" required="true"/>
		<col name="phone_1" length="16"/>
		<col name="phone_2" length="16"/>
		<col name="email" length="256"/>
		<col name="first_name" length="64"/>
		<col name="middle_name" length="64"/>
		<col name="last_name" length="128" index="true"/>
		<col name="suffix" length="16"/>
		<col name="gender" type="enum" check="0..1"/>
		<col name="legal_residency" type="enum" check="0..3"/>
		<col name="citizenship" type="us_state"/>
		<col name="dependants_count" type="byte" check=">0"/>
		<col name="marital_status" type="enum" check="0..4"/>
		<col name="employment_status" type="enum" check="0..6"/>
		<col name="employer" length="256"/>
		<col name="occupation" length="256"/>
		<col name="employer_address_id" ref="br_address"/>
		<col name="is_employer_finra_member"/>
		<col name="is_senior_political_figure"/>
		<col name="is_deceased"/>
		<col name="is_pid_verified"/>
		<col name="pid_type" type="enum" check="0..5"/>
		<col name="pid_number" length="32"/>
		<col name="pid_state_code" type="us_state"/>
		<col name="pid_country_code" type="country"/>
		<col name="pid_issued" type="date"/>
		<col name="pid_expires" type="date"/>
		<col name="pid_other" length="256"/>
		<col name="dba" length="256" index="true"/>
		<col name="legal_name" length="256" index="true"/>
		<col name="business_description"/>
		<col name="is_custodial_bank"/>
		<col name="is_government_entity"/>
		<col name="is_suppressed"/>
		<col name="suppression_reason_id" ref="supTrigReasons"/>
		<col ref="ref.annual_income_levels"/>
		<col name="annual_income_amount" type="money"/>
		<col ref="ref.liquid_assets_levels"/>
		<col name="liquid_assets_amount" type="money"/>
		<col ref="ref.tax_bracket_levels"/>
		<col name="estimated_net_worth_level_id" ref="ref.net_worth_levels"/>
		<col name="estimated_net_worth_amount" type="money"/>
		<col name="liquid_net_worth_level_id" ref="ref.net_worth_levels"/>
		<col name="liquid_net_worth_amount" type="money"/>
		<col ref="annual_expenses_levels"/>
		<col name="annual_expenses_amount" type="money"/>
		<col ref="special_expenses_levels"/>
		<col name="special_expenses_amount" type="money"/>
		<col ref="special_expenses_timeframes"/>
		<col name="is_assets_held_away_refused"/>
		<col name="assets_held_away_total" type="money"/>
		<col name="last_cip_at" type="datetime"/>
		<timestamps/>
	</columns>
</table>
