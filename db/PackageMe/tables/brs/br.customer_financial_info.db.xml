<?xml version="1.0"?>
<!--
	[br].[customer_financial_info]
	Contains customer financial info values.
-->
<table name="customer_financial_info" schema="br">
	<columns>
		<col id="true"/>
		<col name="customer_id" ref="br_natural_owner" business_id="true"/>
		<col ref="ref.financial_info" business_id="true"/>
		<col name="level_value" type="int" check=">=0"/>
		<col name="percent_value" type="percent"/>
		<col name="amount_value" type="money"/>
		<col name="comment" length="256"/>
	</columns>
</table>
