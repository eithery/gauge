<?xml version="1.0"?>
<!--
	[br].[account_investment_purposes]
	Contains investment purposes values for master accounts.
-->
<table name="account_investment_purposes" schema="br">
	<columns>
		<col name="master_account_id" ref="br_master_account" business_id="true"/>
		<col ref="ref.investment_purposes" business_id="true"/>
		<col name="rank" type="byte" required="true" check=">0"/>
		<col name="comment" length="256"/>
	</columns>
	<indexes>
		<index unique="true">
			<col ref="master_account_id"/>
			<col ref="rank"/>
		</index>
	</indexes>
</table>
